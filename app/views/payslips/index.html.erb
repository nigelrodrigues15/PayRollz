<p id="notice"><%= notice %></p>

<h1>Payslips</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Regular hours</th>
      <th>Overtime hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payslips.each do |payslip| %>
      <tr>
        <td><%= payslip.employee_id %></td>
        <td><%= payslip.regular_hours %></td>
        <td><%= payslip.overtime_hours %></td>
        <td><%= link_to 'Show', payslip %></td>
        <td><%= link_to 'Edit', edit_payslip_path(payslip) %></td>
        <td><%= link_to 'Destroy', payslip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

